{
  "name": "kpi-project",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://reqres.in",
  "dependencies": {
    "antd": "^3.16.6",
    "axios": "^0.18.0",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-redux": "^7.0.3",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "src"
          ]
        }
      },
      "react": {
        "version": "detect"
      }
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "no-console": "off",
      "max-len": [
        1,
        120,
        2,
        {
          "ignoreComments": true
        }
      ],
      "prefer-promise-reject-errors": [
        "off"
      ],
      "react/jsx-filename-extension": [
        "off"
      ],
      "react/prop-types": [
        "warn"
      ],
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "brace-style": "error",
      "semi": [
        "error",
        "never"
      ],
      "max-lines": ["error"],
      "complexity": ["off", 11],
      "eqeqeq": ["error", "always"],
      "max-classes-per-file": ["off", 1],
      "no-alert": "warn",
      "no-caller": "error",
      "no-div-regex": "off",
      "no-else-return": ["error", { "allowElseIf": false }],
      "no-empty-pattern": "error",
      "no-empty-function": ["error", {
        "allow": [
          "arrowFunctions",
          "functions",
          "methods"
        ]
      }],
      "no-eq-null": "off",
      "no-eval": "error",
      "no-global-assign": ["error", { "exceptions": [] }],
      "no-native-reassign": "off",
      "no-implicit-coercion": ["off", {
        "boolean": false,
        "number": true,
        "string": true,
        "allow": []
      }],
      "no-implicit-globals": "off",
      "no-loop-func": "error",
      "no-lone-blocks": "error",
      "no-multi-spaces": ["error", {
        "ignoreEOLComments": false
      }],
      "no-octal": "error",
      "no-param-reassign": ["error", {
        "props": true,
        "ignorePropertyModificationsFor": [
          "acc",
          "accumulator",
          "e",
          "staticContext"
        ]
      }],
      "no-proto": "error",
      "no-redeclare": "error",
      "no-return-assign": ["error", "always"],
      "no-return-await": "error",
      "no-self-assign": ["error", {
        "props": false
      }],
      "no-self-compare": "error",
      "no-sequences": "error",
      "no-throw-literal": "error",
      "no-warning-comments": ["off", { "terms": ["todo", "fixme", "change"], "location": "start" }],
      "no-with": "error",
      "radix": "error",
      "require-await": "off",
      "require-unicode-regexp": "off",
      "yoda": "error",
      "comma-dangle": ["error", "never"],
      "accessor-pairs": "off",
      "no-multiple-empty-lines": "error",
      "no-trailing-spaces": "error",
      "eol-last": ["error", "always"]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-plugin-import": "^1.11.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "customize-cra": "^0.2.12",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "prop-types": "^15.7.2",
    "react-app-rewired": "^2.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
